
%h2 Details about #{@project.name}
%ul#details
  %li
    owners:
    - @project.snapusers.each do |user|
      = link_to "#{user.username}", snapuser_path(user)
  %li
    description:
    = @project.description
  %li
    privacy:
    = @project.privacy
- if @project.snapusers.include?(current_snapuser)
  = link_to 'Edit', edit_snapproject_path(@project)
  = link_to 'Create new project', new_snapproject_path
  = link_to 'Create a new class', new_snapclass_path
  -#dialog box pops up twice?
  = button_to 'Delete', snapproject_path(@project), method: :delete, data: {confirm: "Are you sure?"}

-if !@comments.empty?
  %table{:class => "table table-hover"}
    %thead
      %tr
        %th Username
        %th Comment
        %th Time
    %tbody
      - @comments.each do |comment|
        %tr
          %td= link_to "#{Snapuser.find(comment.snapuser_id).username}", snapuser_path(Snapuser.find(comment.snapuser_id))
          %td= comment.content
          %td= comment.comment_time

=form_tag snapproject_comment_path do
  .form-group
    =label :snapcomment, :comment_content, 'Comment', :required => true
    %br
    =text_field :snapcomment, 'comment_content'
  .form-group
    =submit_tag 'Post'

= link_to 'Back to My Projects', snapuser_projects_path(current_snapuser)
