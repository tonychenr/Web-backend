<table class="table table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Privacy</th>
		</tr>
	</thead>
	<tbody>
		<% @courses.each do |course| %>
		<tr>
			<td><%= link_to "#{course.title}", course_path(course) %></td>
			<td><%= course.description %></td>
			<td><%= course.privacy %></td>
		</tr>
		<% end %>
	</tbody>
</table>
