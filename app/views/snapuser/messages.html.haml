
%table{:class => "table table-hover"}
  %tbody
    - @messages.each do |message|
      %tr
        %td= message.snapuser.username
        %td= message.content

=form_tag reply_path(current_snapuser.id, :conversation_id =>@conversation) do
  .form-group
    =label :message, :text, 'Text'
    =text_field :message, 'text'

  .form-group
    =submit_tag 'Reply'

