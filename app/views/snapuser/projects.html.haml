%h1 #{@user.username}'s Projects

%table#projects
  %thead
    %tr
      %th Project Name
      %th Owners
      %th Desription
      %th Privacy
  %tbody
    - @publicprojects.each do |project|
      %tr
        %td= link_to project.name, snapproject_path(project)
        -project.snapusers.each do |user|
          %td= user.username
        %td= project.description
        %td= project.privacy
-if @user==current_snapuser
  = link_to 'Create new project', new_snapproject_path