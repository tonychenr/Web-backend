-# in app/views/users/show.html.haml

%h2 Details about #{@user.username}

%ul#details
  %li
    email:
    = @user.email
  %li
    Taught Classes:
    = link_to 'View Classes', taught_classes_path
  %li
    Enrolled Classes:
    = link_to 'View Classes', enrolled_classes_path
  %li
    All Classes:
    = link_to 'View Classes', all_classes_path
= link_to 'View Projects', user_projects_path(@user)
- if @user == current_user
  = link_to 'Edit', edit_user_registration_path
  %br
  = link_to 'Create project', new_snapproject_path
  %br
  = link_to 'View Messages', conversations_path(@user)
  %br
  = link_to 'Create a new class', new_snapclass_path
  %br
  = button_to 'Delete', user_path(@user), :method => :delete, :confirm => 'Are you sure?'

= link_to 'Back to User list', user_index_path
