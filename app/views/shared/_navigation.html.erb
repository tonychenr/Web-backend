<!-- app/views/shared/_navigation.html.erb -->

<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Snap!</a>
    </div>
    <ul class="nav navbar-nav navbar-right navbar-custom">
      <% if snapuser_signed_in? %>
        <li><%= link_to current_snapuser.username, edit_snapuser_registration_path(current_snapuser) %></li>
        <li><%= link_to 'Log out', destroy_snapuser_session_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to 'Sign in', new_snapuser_session_path %></li>
        <li><%= link_to 'Sign up', new_snapuser_registration_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
